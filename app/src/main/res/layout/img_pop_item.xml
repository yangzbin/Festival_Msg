<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <ImageView
        android:id="@+id/id_imgdir_item_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/picture_dir"
        android:src="@drawable/icon_to_send"
        android:scaleType="centerCrop"
        android:paddingTop="14dp"
        android:paddingBottom="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/id_imgdir_item_img">
        <TextView
            android:id="@+id/id_imgdir_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有图片"
            android:textSize="16sp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/id_imgdir_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100张"
            android:layout_gravity="center"
            android:textSize="12sp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/dir_choose"
        android:layout_marginRight="20dp"/>

</RelativeLayout>